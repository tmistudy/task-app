<div class="container">
  <h2>スケジュール詳細</h2>
  <table>
    <tr>
      <th>タイトル</th>
      <td><%= @user.title %></td>
    </tr>
    <tr>
      <th>開始日</th>
      <td><%= @user.start.strftime("%Y年%m月%d日") %></td>
    </tr>
    <tr>
      <th>終了日</th>
      <td><%= @user.end_day.strftime("%Y年%m月%d日") %></td>
    </tr>
    <tr>
      <th>終日</th>
      <td>
        <% if @user.all_day == 1 then %>◯
        <% end %>
      </td>
    </tr>
    <tr>
      <th>スケジュールメモ</th>
      <td><%= @user.memo %></td>
    </tr>
  </table>
  <div>
    <ul>
      <li><%= link_to "スケジュール一覧に戻る", :users %></li>
      <li><%= link_to "スケジュールを編集する", :edit_user %></li>
      <li><%= link_to "スケジュールを削除する", "/users/#{@user.id}", data: {turbo_method: :delete} %></li>
    </ul>
  </div>
</div>
<footer>
  <h1>現在の日時  <%= Date.current.strftime('%Y年%m月%d日') %></h1>
</footer>
